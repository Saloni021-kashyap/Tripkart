<% layout("/layouts/boilerplate") %>

<h3 class="mb-4">My Bookings</h3>

<% if (myBookings.length === 0) { %>
  <p class="text-muted">No bookings yet.</p>
<% } else { %>

  <table class="table table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Package</th>
        <th>Date</th>
        <th>Persons</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% myBookings.forEach(b => { %>
        <tr>
          <td><%= b.listing.title %></td>

          <td><%= new Date(b.travelDate).toDateString() %></td>

          <td><%= b.persons %></td>

          <!-- ðŸ“Œ Status Badge -->
          <td>
            <span class="badge 
              <%= b.status === 'confirmed' ? 'bg-success'
                : b.status === 'pending' ? 'bg-warning'
                : b.status === 'cancel_requested' ? 'bg-info'
                : 'bg-danger' %>">
              <%= b.status.replace('_', ' ') %>
            </span>
          </td>

          <!-- âŒ Cancel Request with Reason -->
          <td>
            <% if (b.status === 'pending' || b.status === 'confirmed') { %>

             <form
  action="/bookings/<%= b._id %>/cancel-request?_method=PUT"
  method="POST"
>
  <button class="btn btn-sm btn-danger">
    Cancel Request
  </button>
</form>


            <% } else if (b.status === 'cancel_requested') { %>

              <small class="text-muted">
                Cancel request sent.<br>
                <strong>Reason:</strong> <%= b.cancelReason %>
              </small>

            <% } else { %>
              <span class="text-muted">N/A</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

<% } %>
